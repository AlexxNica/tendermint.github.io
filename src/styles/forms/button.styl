.btn
  background subtle-gradient
  border 1px solid #ddd
  box-shadow inset #fff 0 0 x*0.5

  margin 0
  padding 0 1.5em

  height 2em
  font-weight 600
  color txt
  text-shadow #fff 0 -1px 0

  cursor pointer
  user-select none

  display flex
  justify-content center
  align-items center

  &:hover
    background linear-gradient(top, #fff, hsl(0,0,95%))
    box-shadow inset #fff 0 0 x*0.75
    color #000

  i.fa
    padding-right 0.5em

.btn-primary
  background linear-gradient(top, lighten(mcolor,10%), darken(mcolor,10%))
  border 1px solid darken(mcolor,15%)
  box-shadow inset 0 1px 0 lighten(mcolor,40%)

  color lighten(mcolor,95%)
  text-shadow 0 -1px 0 darken(mcolor,30%)

  &:hover
    background linear-gradient(top, lighten(mcolor,15%), darken(mcolor,8%))
    box-shadow inset 0 1px 0 lighten(mcolor,55%)
    color #fff

alt-top = darken(hsl(98,202,60),15%)
alt-bot = darken(rgb(31,134,44),15%)
alt-sh = darken(rgb(79,183,43),15%)
.btn-alternate
  background linear-gradient(top, alt-top, alt-bot)
  border 1px solid darken(alt-bot,10%)
  box-shadow inset 0 1px 0 alt-sh

  color #fff
  text-shadow 0 1px 0 alt-sh

  &:hover
    background linear-gradient(top, lighten(alt-top,10%), darken(alt-bot,10%))
    box-shadow inset 0 1px 0 lighten(alt-sh,10%)
    color #fff


.btn-small
  height x*1.5
  font-size x*0.75
  padding 0 x

.btn-large
  height x*3
  font-size 1.25em
  font-weight 600

.btn-copy
  width x*8
  position relative
  padding 0

  .label-default
  .label-active
    width x*6
    position absolute
    top 0
    left 50%
    margin-left -3*x

  .label-default
    opacity 1

  .label-active
    opacity 0
    color lighten(dim,50%)

  &:not(:active)
    .label-default
    .label-active
      transition opacity 750ms step-end

  &:active
    .label-default
    .label-active

    .label-default
      opacity 0

    .label-active
      opacity 1
