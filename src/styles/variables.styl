//==============================================================================
// colors

mhue = 210
msat = 80%
mlit = 20%
mcolor = hsl(mhue,msat,mlit)

ahue = 140
asat = 100%
alit = 40%
acolor = hsl(ahue,asat,alit)

c-site-bc = #eee
c-site-bg = darken(mcolor, 33%)
c-site-fg = #fff

bc = #ddd
bc2 = #eee
dbc = lighten(mcolor, 20%)

c-input-bc = #ccc
c-input-bg = #fff
c-input-hl = rgb(31,31,31)

c-panel-bc = rgb(43,43,43)
c-panel-bg = c-panel-bc
c-panel-fg = rgb(50,50,50)
c-panel-hl = rgb(74,74,74)

txt = #000
dim = #555
light = #999

lcolor = hsl(mhue,msat,45%)
link = lcolor
anchor = lcolor

alert-color = hsl(330,100%,45%)

primary-gradient = linear-gradient(top, lighten(mcolor,10%), darken(mcolor,10%))
primary-gradient-hover = linear-gradient(top, lighten(mcolor,15%), darken(mcolor,8%))
subtle-gradient = linear-gradient(top, hsl(0,0,99%), hsl(0,0,93%))
subtle-gradient-hover = linear-gradient(top, hsl(0,0,100%), hsl(0,0,95%))

// button colors
btn-red-color = hsl(0,100%,40%)
btn-green-color = hsl(120,100%,40%)

faint-bg()
  background linear-gradient(top, hsl(0,0,97%), hsl(0,0,95%))
  box-shadow inset #fff 0 1px 0

//==============================================================================
// typography

x = 16px
sans = system, -apple-system, BlinkMacSystemFont, "Roboto", "Seogue UI", "Helvetica Neue", "Lucida Grande", sans-serif
mono = Consolas, Monaco, monospace

df()
  font-size x
  line-height 1.5
  font-family sans
  color txt
  font-weight 300
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

mono()
  font-family Consolas, Monaco, monospace
  font-weight normal
