.master-detail
  padding-top 2.4*x
  min-height 100vh
  background c-site-fg

.master-detail + #site-bottom #section-install
  display none

.detail
  padding 0 x x

.master 
  nav
    padding-bottom x*0.75
    border-bottom 4px solid hsl(0,0,75%)

  &.inline
    margin 0 auto
    max-width 48em
    width auto

    nav
      border 1px solid bc
      border-top none
    .thumb-button
      display none

  &.mobile-active
  &.mobile-inactive
    position fixed
    top 0
    left 0
    width 100vw

    nav
      padding-top 3*x
      position relative
      height 100vh
      overflow hidden

      z-index 10

    .thumb-button
      display block

  &.mobile-active nav
    display block

  &.mobile-inactive nav
    display none

  .title
    color light
    font-size 0.75*x
    font-weight bold
    text-transform uppercase
    letter-spacing 0.0625em
    line-height 2
    padding x x*1.5 x*0.25

  a + .title
    margin-top 0.75*x
  a
    display block
    padding 0.25*x x*1.5
    padding-left 1.25*x
    position relative
    color txt
    border-left 0.25*x solid transparent

    &.router-link-active
      border-left-color link
      color link
      &:after
        display none

@media screen and (min-width: 360px)
  .detail
    padding-left 1.5*x
    padding-right 1.5*x

@media screen and (min-width: 720px)
  .master
    &.mobile-active
    &.mobile-inactive
      width 240px
    &.inline
      margin-top 1.5*x
      margin-bottom 1.5*x
      nav
        margin 0 x
    nav
      background hsl(0,0,98%)

    .thumb-button
      display none !important

  .detail
    margin-left 240px
    padding-left 2*x
    padding-right 2*x

  .master-detail + #site-bottom #site-footer
    .sections
      padding-left 240px + 2*x !important
    section
      flex 0 0 50% !important

@media screen and (min-width: 960px)
  .master
    &.mobile-active
    &.mobile-inactive
      width 320px

  .detail
    margin-left 320px
    padding-left 4*x
    padding-right 4*x
    padding-bottom 2*x

  .master-detail + #site-bottom #site-footer
    .sections
      padding-left 320px + x !important
      padding-right x !important
    section
      flex 0 0 25% !important
