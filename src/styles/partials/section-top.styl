#section-top
  background mcolor url('../assets/images/home/gradient.jpg') no-repeat center center
  background-size cover
  position relative
  margin-top 2.4*x

  padding 2*x

  display flex
  flex-flow column no-wrap
  align-items center
  justify-content center

  h1
    font-size 2*x
    color lighten(mcolor,90%)
    line-height 1
    margin-bottom 0.5*x
    max-width 36*x
    letter-spacing -0.025em

    display flex
    justify-content center

    text-align center
    font-weight 400

    i.fa
      margin-right 0.5*x
      color lighten(mcolor,50%)

  p
    color lighten(mcolor,50%)
    line-height 1.25*x
    text-align center
    max-width 22em

    strong
      font-weight 500
      color lighten(mcolor,65%)

    a
      color lighten(mcolor,75%)
      background hsla(0,0,0,0.2)
      padding 0 0.25*x
      &:hover
        color #fff

  &.section-top-tall
    padding 3em 0 2em
    p
      max-width 23em

@media screen and (min-height: 400px)
  #section-top
    margin-top 3*x

@media screen and (min-width: 400px) and (min-height: 400px)
  #section-top
    .section-container
      padding 3*x 2*x

    h1
      font-size 2.5*x
      margin-bottom 0.75*x

    p
      font-size 1.125*x
      line-height 1.375

@media screen and (min-width: 720px) and (min-height: 480px)
  #section-top
    .section-container
      padding 4*x 2*x

    h1
      font-size 2.5*x
      margin-bottom 0.75*x

      i.fa
        margin-right 0.75*x

    p
      font-size 1.25*x
      line-height 1.5
