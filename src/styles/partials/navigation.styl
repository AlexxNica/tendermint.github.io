.navigation 
  border-left 1px solid bc

  &.inline
    border 1px solid bc
    border-top none
    margin 1.25*x auto
    max-width 48em

    .thumb-button
      display none

  &.active
    position fixed
    top 0
    left 0
    z-index 10

    width 100vw
    height 100vh
    padding-top 3*x

    background #fff

  .router-link-active
    background lighten(bc, 50%) !important
    color txt !important

  > .block
    display block
    padding 0.75*x x
    border-top 1px solid bc
    position relative
    font-weight 500
    color dim

  > a.block
    color link

    &:after
      content '\f105'
      font-family FontAwesome
      line-height 1.5
      text-align center
      display block
      line-height 3*x
      width 3*x
      position absolute
      top 0
      right 0

    &.router-link-active:after
      display none

  .sub-nav
    padding-left 1em
    padding-bottom 0.5em

  ol.sub-nav, ul.sub-nav
    li
      a
        padding 0.5em
        line-height 1.5em
        border-bottom 1px dotted bc
        display block
      &:last-of-type a
        border none
