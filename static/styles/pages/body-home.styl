#body-home
  #section-hero-home
    background mcolor
    background linear-gradient(top, lighten(mcolor,5%), darken(mcolor,5%))
    padding 4em 0 3em
    text-align center
    //width 100vw
    //height 100vh

    .container
      padding 0 1.5em

    h1
      margin 0 0 x*0.5

    p#tagline
      color lighten(mcolor,80%)
      span.slash
        color lighten(mcolor,20%)
        font-weight 200

  #section-architecture
    a.anchor-img
      text-align center
      display block
      margin 0 auto
      img
        display block
        max-height 360px
        margin 0 auto

    ul
      text-align left
      padding 0 !important
      list-style none
      li
        border 1px solid lighten(mcolor,10%)
        padding 0.75em 1em
        background darken(mcolor,10%)

  #section-resources
    display block

    .content
      ul
        list-style none
        padding 0
        margin 0

  #section-video
    border-bottom none
    iframe
      display block
      width 100vw
      height (100/16*9)vw
      max-width 720px
      max-height 405px
      margin 0 auto
