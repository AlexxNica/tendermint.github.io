#article-prev-next
  margin-top 1.5em
  display flex
  flex-flow column no-wrap
  margin 1.25*x -0.25*x -0.25*x

  a.article-prev-next
    display block
    border 1px solid bc
    margin 0.25*x
    padding 0.75*x x

    flex 1
    display flex
    flex-flow column no-wrap

    .label
      color dim
      text-transform uppercase
      font-size 0.75*x
      letter-spacing 1px
      margin 0 0 0.25*x

    .title
      font-weight bold
      font-size 1.25*x
      line-height 1.25

      flex 1

    &:hover
      background lighten(mcolor,97%)
      border 1px solid lighten(mcolor,66%)
      .arrow
        background 

@media screen and (min-width: 768px)
  #article-prev-next
    flex-flow row 
    margin 1.25*x -0.5*x -0.5*x

    a.article-prev-next
      margin 0.5*x
      padding 1.25*x 1.5*x

      &.article-next
        text-align right

@media screen and (min-width: 960px)
  #article-prev-next
    margin-top 4*x
