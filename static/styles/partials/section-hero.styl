#section-hero
  background mcolor url('../images/home/gradient.jpg') no-repeat center center
  background-size cover
  text-align center
  width 100vw
  height 100vh
  position relative

  .container
    width 100vw
    height 100vh

    display flex
    flex-flow column no-wrap
    align-items center
    justify-content center
    padding 0 1.5em

  h1
    color lighten(mcolor,90%)
    margin 0 0 0.5*x

  .tagline, .introduction
    margin 0 0 1.5*x

  .tagline
    color lighten(mcolor,70%)
    font-size 1em
    text-transform uppercase
    font-weight 200
    font-size 0.8em
    letter-spacing 1px
    span.slash
      color lighten(mcolor,20%)

  .introduction
    color lighten(mcolor,55%)
    line-height 1.25em

  .social-media
    display flex
    margin 0 auto
    margin-top 1.5em
    a
      margin x*0.25
      display block

      background hsla(mhue,msat,mlit - 20%,0.5)
      background hsla(0,0,0,0.25)

      font-size 1em
      width 2em
      line-height 2em
      color lighten(mcolor,60%)

  #home-arrow-down
    position absolute
    bottom 0
    left 50%

    background darken(mcolor,20%)
    background hsla(0,0,0,0.25)
    line-height x*1.5
    width x*8
    margin-left x*-4

    color lighten(mcolor,60%)
    font-size x*1.5

  .social-media a, #home-arrow-down
    transition 0.2s ease all
    &:hover
      background hsla(0,0,0,0.5)
      color lighten(mcolor,80%)
