default-border-top()
  border-top 4px solid darken(mcolor, 33%)

highlighted-border-top-color()
  border-top-color lighten(mcolor, 33%) !important

#site-header
  position fixed
  top 0
  left 0
  z-index 100

  height 3*x
  background mcolor url('../images/home/gradient.jpg') no-repeat top right
  background-size cover

  width 100vw
  display flex

  box-shadow hsla(mhue,msat,mlit - 15%,0.15) 0 0.125*x 0.16*x

  a#nav-home
    display block
    default-border-top()
    img
      width 3*x - 4px
      height 3*x - 4px

  nav
    flex 1
    display flex
    default-border-top()
    box-shadow inset lighten(mcolor,10%) 1px 0 0
    padding-left 0.5*x
    a
      display block
      padding 0 0.5*x
      line-height 3*x - 4px
      color lighten(mcolor,75%)
      default-border-top()
      margin-top -4px

      .short
        display inline
      .long
        display none

      &:hover
        highlighted-border-top-color()
        color lighten(mcolor,90%)
      &#nav-media
        display none

#body-home #nav-home
  border-top-color darken(acolor,25%) !important

#body-blog #nav-blog
#body-media #nav-media
#body-guide #nav-guide
#body-about #nav-about
#body-code #nav-code
  highlighted-border-top-color()

@media screen and (min-width: 400px)
  #site-header
    nav
      padding-left 0.75*x
      a
        padding 0 0.75*x

@media screen and (min-width: 768px)
  #site-header
    nav
      padding-left 0.75*x
      justify-content flex-end
      a
        border-left 1px solid darken(mcolor,20%)
        border-left 1px solid hsla(0,0,0,0.2)
        padding 0 2*x
        &#nav-media
          display block

        .short
          display none
        .long
          display inline
