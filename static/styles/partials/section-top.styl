#section-top
  background mcolor url('../images/home/gradient.jpg') no-repeat center center
  background-size cover
  position relative
  margin-top 3*x

  .section-container
    width 100vw
    height 12*x

    display flex
    flex-flow column no-wrap
    align-items center
    justify-content center
    padding 0 2*x

  h1
    font-size 2*x
    font-weight 200
    color lighten(mcolor,90%)
    line-height 1
    margin 0 0 0.5*x
    text-align center

  p
    color lighten(mcolor,50%)
    line-height 1.25*x
    text-align center
