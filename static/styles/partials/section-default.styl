.section-default
  .section-container
    padding x 0
    border-bottom 1px solid bc

    .section-header
      display flex
      align-items center
      padding 0.5*x x x

      i.fa
        background lighten(mcolor,25%)
        width 1.5*x
        border-radius 0.75*x

        font-size 0.666*x
        line-height 1.5*x
        text-align center
        color #fff
        margin -0.5*x 0
        margin-right 0.5*x

      h2
        font-weight bold
        color mcolor
        line-height 1.25*x
        span.short
          display inline
        span.long
          display none

    .section-content
      padding 0 x

  &.section-dark
    background mcolor linear-gradient(top, lighten(mcolor,5%), darken(mcolor,5%))

    .section-container
      border-bottom 1px solid lighten(mcolor, 10%)

      .section-header
        justify-content center
        padding 0.5*x x x
        h2
          color lighten(mcolor,90%)

      p, ul, ol
        color lighten(mcolor,60%)

      ul
        li
          border 1px solid lighten(mcolor,10%)
          background lighten(mcolor,3%)

      a
        color lighten(mcolor,90%)
        &:hover
          color #fff

@media screen and (min-width: 400px)
  .section-default
    .section-container
      .section-header
        i.fa
          width 1.875*x
          line-height 1.875*x
          font-size 0.8333*x
          border-radius 0.9375*x
        h2
          font-size 1.25*x
