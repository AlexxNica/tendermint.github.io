.section-default
  .section-container
    padding x
    border-bottom 1px solid bc

    .section-header
      display flex
      align-items center
      justify-content center
      text-align center

      padding-top 0.5*x
      padding-bottom x

      i.fa
        background lighten(mcolor,25%)
        width 1.5*x
        border-radius 0.75*x

        font-size 0.666*x
        line-height 1.5*x
        text-align center
        color #fff
        margin -0.5*x 0
        margin-right 0.5*x

      h2
        font-weight bold
        color mcolor
        line-height 1.25*x
        span.short
          display inline
        span.long
          display none

  &.section-columns
    .section-container
      .section-header
        justify-content flex-start
        text-align left
        padding-bottom 0.5*x

  &.section-dark
    background mcolor linear-gradient(top, lighten(mcolor,5%), darken(mcolor,5%))

    .section-container
      border-bottom 1px solid lighten(mcolor, 10%)

      .section-header
        h2
          color lighten(mcolor,90%)

      p, ul, ol
        color lighten(mcolor,60%)

      ul
        li
          border 1px solid lighten(mcolor,12%)
          background lighten(mcolor,3%)

      a
        color lighten(mcolor,90%)
        &:hover
          color #fff

@media screen and (min-width: 400px)
  .section-default
    .section-container
      .section-header
        i.fa
          width 1.875*x
          line-height 1.875*x
          font-size 0.8333*x
          border-radius 0.9375*x
        h2
          font-size 1.25*x

    &.section-columns
      .section-container
        .section-header
          padding-bottom x

@media screen and (min-width: 768px)
  .section-default
    .section-container
      padding 1.25*x

      .section-header
        padding-bottom 1.75*x
        h2
          font-size 1.333*x
          font-weight 500

    &.section-columns .columns
      display flex
      flex-flow row wrap
      .section-container
        flex 1 0 50%
        &:nth-of-type(2n - 1)
          border-right 1px solid bc

    &.section-columns.section-dark .columns
      .section-container
        &:nth-of-type(2n - 1)
          border-right-color lighten(mcolor, 20%)

@media screen and (min-width: 960px)
  .section-default
    .section-container
      .section-header
      .section-content
        max-width 960px
        margin 0 auto
    &.section-columns .columns
      max-width 960px
      margin 0 auto
