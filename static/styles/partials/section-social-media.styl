#section-social-media
  ul.ul-social-media
    display flex
    flex-flow column no-wrap
    align-items stretch

    margin -0.25*x
    li
      padding 0.25*x
      border none
      background transparent
      a
        display block
        padding 0.75*x x
        border 1px solid lighten(mcolor,15%)
        background lighten(mcolor,5%)
        h3
          color lighten(mcolor,75%)
          font-size x
          i.fa
            padding-right 0.2em

        &:hover
          background lighten(mcolor,10%)
          h3
            color lighten(mcolor,85%)

@media screen and (min-width: 768px)
  #section-social-media
    ul.ul-social-media
      display flex
      flex-flow row wrap
      li
        flex 1 0 50%
        display flex
        a
          flex 1
