/*----------------------------------------------------------------------
Header & Footer
----------------------------------------------------------------------*/

logo-size = 60px

.site-logo
  margin-left -0.75 * logo-size
  width logo-size * 1.5
  height logo-size * 1.5 + 4px
  img
    margin logo-size * 0.25
    width logo-size
    height logo-size

#site-header
  .left, .right
    float right
  .site-logo
    position static
    float left
    margin-top -2px
    margin-left 3em

#site-footer
  .site-logo
    position static
    float left
    margin-left 3em
    margin-top -3 * x + 2px

/*----------------------------------------------------------------------
Sections & Containers
----------------------------------------------------------------------*/

section
  padding 3em 0
  h2
    margin-bottom x*3
    font-size 2em

  .container
    width 100%
    max-width 1280px

/*----------------------------------------------------------------------
Homepage
----------------------------------------------------------------------*/

.section-dark
  form
    width 320px
    padding 1.5em 1.5em 0.5em
    background hsl(mhue,msat,25%)
    border-bottom 4px solid hsl(mhue,msat,15%)
    input, button
      width 100%
      font-size 1.25em

#section-hero
  text-align left
  padding 6em 0 3em
  clearfix()
  .container
    padding 0 3em

  .text
    float left
    width 50%
  h1
    font-size 5em
    font-weight 600
  p
    font-size 3em
    font-weight 500
    margin 0

  form
    margin-top 2em
    margin-right 4em
    float right

#section-intro
  .container
    padding 0 3em
  p
    font-size 1.5em
    max-width 1024px
    margin-bottom 0
    &.first
      font-size 1.75em
      font-weight 500

ul#ul-team
  li
    width 25%

#section-resources
  clearfix()

  .container
    padding-right 0

  .thirds
    width 33.33333%
    float left
    padding-right 1.5em
