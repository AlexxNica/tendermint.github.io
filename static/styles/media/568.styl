/*----------------------------------------------------------------------
Typography
----------------------------------------------------------------------*/
/*----------------------------------------------------------------------
Site Header
----------------------------------------------------------------------*/

logo-size = 40px

.site-logo
  margin-left -0.75 * logo-size
  width logo-size * 1.5
  height logo-size * 1.5 + 4px
  img
    margin logo-size * 0.25
    width logo-size
    height logo-size

#site-header
  ul
    width 120px * 1.6

/*----------------------------------------------------------------------
Sections
----------------------------------------------------------------------*/

section
  .container
    padding 0 1.5em

/*----------------------------------------------------------------------
Body - Home
----------------------------------------------------------------------*/

#body-home
  h1
    font-size 4em

  #section-hero
    input, button
      margin-bottom 1em

  ul#ul-team
    margin -1.5em 0 0
    padding 0.75em
    li
      padding 0.75em
      margin 0

/*----------------------------------------------------------------------
Body - Blog
----------------------------------------------------------------------*/

.body-blog
  #section-hero
    padding 4em 0 3em

    h1
      font-size 2em * 1.5
    p
      font-size 1em * 1.5

  h2
    font-size 1.75em
  p
    font-size 1.125em
