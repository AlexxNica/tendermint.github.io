/*----------------------------------------------------------------------
Site Header
----------------------------------------------------------------------*/

logo-size = 40px

.site-logo
  margin-left -0.75 * logo-size
  width logo-size * 1.5
  height logo-size * 1.5 + 4px
  img
    margin logo-size * 0.25
    width logo-size
    height logo-size

/*----------------------------------------------------------------------
Sections
----------------------------------------------------------------------*/

section
  padding 2em 0
  h2
    font-size 1.75em
    width 480px
    margin 0 auto x*2

.container
  padding 0 1.5em
  width 768px
  margin 0 auto

/*----------------------------------------------------------------------
Body - Home
----------------------------------------------------------------------*/

#body-home
  #section-hero
    input, button
      margin-bottom 1em

  #section-intro
    p
      font-size x * 1.125
      &.first
        font-size x* 1.333

  ul#ul-team
    margin -1.5em 0 0
    padding 0.75em
    li
      padding 0.75em
      margin 0

/*----------------------------------------------------------------------
Body - Blog
----------------------------------------------------------------------*/

.body-blog
  #section-posts
    // make sure last article doesn't have too much padding
    margin-bottom -1.5em

    article
      border 1px solid #ddd
      padding 1em
      max-width 768px
      margin 0 auto 1.5em
      h2
        font-size 1.75em

  #section-hero
    padding 4em 0 3em

    h1
      font-size 2em * 1.75em
    p
      font-size 1em * 1.75em

  .article-body
    h2
      font-size 1.5em * 1.125
    h3
      font-size 1.25em * 1.125
    p, ul, ol, blockquote, table
      font-size 1.125em * 1.125
