sans = "San Francisco Sans", 'Helvetica Neue', Arial, Helvetica, sans-serif

x = 16px

txt = #222
dim = hsl(mhue,20%,35%)
light = hsl(mhue,60%,50%)

html
  -webkit-text-size-adjust 100%

body, input, button
  font-size x
  line-height 1.5
  font-family sans

strong
  font-weight bold

em
  font-style italic

a
  text-decoration none
  color lcolor

.container a:hover
  text-decoration underline

p, ul, ol
  margin 0 0 1.5em

li
  margin 0 0 0.5em

h1, h2, h3, h4, h5, h6
  margin 0
  padding 0
  font-weight normal

h1
  font-size 3em
  letter-spacing -1px
  color hsl(mhue,60%,90%)
  text-shadow hsl(mhue,msat,40%) 0 2px 0
  line-height 1em
  margin 0 0 0.2em

h2
  font-weight bold
  font-size 1.5em
  color mcolor
  font-weight 500

h3
  font-weight bold

h4
  font-weight 500

.article-body
  /* These are technically the same, but use both */
  overflow-wrap break-word
  word-wrap break-word

  /* Adds a hyphen where the word breaks, if supported (No Blink) */
  -ms-hyphens auto
  -moz-hyphens auto
  -webkit-hyphens auto
  hyphens auto

  ul, ol, table, blockquote
    margin 0 0 1.5em

  h2
    text-align left
    font-size 1.5em
    line-height 1.25em
    margin 1.5em 0 0.5em
    padding-top 1.5em
    font-weight bold
    width 100%
    border-top 1px solid mborder


  h3
    color mcolor
    font-size 1.25em
    line-height 1.25em
    margin 2em 0 0.5em
    font-weight 500

  ul
    padding-left 1.5em
    li
      list-style square
      margin 0 0 0.25em
  table
    border 1px solid #ddd
    border-collapse collapse
    width 100%

    th
      font-weight bold
      background hsl(mhue,msat,95%)
      color mcolor

    td, th
      border 1px solid mborder
      padding 0.25em .5em

  blockquote
    border-left 4px solid lighten(mcolor,30%)
    background hsl(mhue,msat,95%)
    padding 0.5em 0.75em
    font 1em/1.5 sans

