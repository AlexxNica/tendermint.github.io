#section-architecture
  a.anchor-img
    text-align center
    display block
    margin 0 auto
    img
      display block
      max-height 360px
      margin 0 auto

@media screen and (min-width: 768px)
  #section-architecture
    .section-container
      .section-content
        display flex
        a.anchor-img
          margin-right x


@media screen and (min-width: 960px)
  #section-architecture
    .section-container
      .section-content
        display flex
        a.anchor-img
          border-right 4px solid lighten(mcolor,10%)
          margin-right 1.5*x
          padding-right 1.5*x
        ul.ul-boxed
          li
            padding x 1.25*x

