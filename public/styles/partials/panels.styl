.panels
  margin -0.5*x
  .panel
    padding 0.5*x

    .panel-container
      border 1px solid bc

    .panel-header
      line-height 2*x
      padding 0 0.5*x
      border-bottom 1px solid bc
      background hsl(0,0,97%)

      h3
        font-size x
        font-weight 500
        color mcolor
        a
          color mcolor
          display block
          &:hover
            color link

    .panel-body
      ul
        list-style none
        padding 0
        margin 0
      li
        padding 0.625*x 0.75*x 0.5*x
        border-bottom 1px dotted bc
        margin 0
        &:last-of-type
          border-bottom none
        h4
          line-height 1.25
          margin 0 0 0.25*x
          font-weight 500

@media screen and (min-width: 768px)
  .panels
    display flex
    flex-flow row wrap

    .panel
      flex 1 0 50%

      .panel-header
        line-height 3*x
        padding 0 x
        h3, h3 a
          font-size 1.125*x
        i.fa
          padding-right 0.2*x

      .panel-body
        li
          padding 0.75*x x


@media screen and (min-width: 1200px)
  .panels
    .panel
      flex 1 0 33.3333%

