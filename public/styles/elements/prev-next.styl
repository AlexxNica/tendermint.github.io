#article-prev-next
  margin-top 1.5em

a.article-prev-next
  display block
  border 1px solid bc
  margin 0 0 0.5*x
  padding 0.75*x x

  &:last-of-type
    margin 0

  .label
    color dim
    text-transform uppercase
    font-size 0.75*x
    letter-spacing 1px
    margin 0 0 0.25*x

  .title
    font-weight bold
    font-size 1.25*x
    line-height 1.25

  &:hover
    background lighten(mcolor,97%)
    border 1px solid lighten(mcolor,66%)
    .arrow
      background 
